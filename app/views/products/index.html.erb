<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<div class="container-fluid" id="productgrid">
	<div class="row">

  	<% cache(cache_key_for_products) do %>
  		<%= render @products %>
  	<% end %>
	</div>
</div>

  <% if current_user && current_user.admin? %>
  	<%= link_to 'New Product', new_product_path %>
  <% end %>