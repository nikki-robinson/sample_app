<% if signed_in? %>
	<h3>Add a review:</h3>
	<%= form_for([@product, @product.comments.build]) do |f| %>
		<p>
			<%= f.label :body, "Comments" %><br>
			<%= f.text_area :body, class: "form-control" %>
		</p>
		<p>
			<div class="rating"></div>
		</p>
		<p>
			<div class="btn">
				<%= f.submit "Submit" %>
			</div>
		</p>
	<% end %>
<% end %>